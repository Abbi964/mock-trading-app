{
	"compilerOptions": {
		"lib": ["ES2021", "DOM"],
		"target": "ES2021",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"noEmitOnError": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": false,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts", "*.ts"],
	"exclude": ["node_modules"]
}
